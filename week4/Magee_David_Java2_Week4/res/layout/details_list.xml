<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mtgsymbols" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/cardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/CardText"/>
        
         <TextView 
            android:id="@+id/cardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AverageText"/>
         
          <TextView 
            android:id="@+id/cardURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
          
          <TextView 
            android:id="@+id/cardHigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/HighText"/>
          
          <TextView 
            android:id="@+id/cardLow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LowText"/>
          
          <Button 
              android:id="@+id/webPageButton"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Visit Card Site"/>
          
          
          
    </LinearLayout>
    

</ScrollView>
